{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajouter un Abonné</h1>

{% for type, messages in app.flashes %}
    <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
        {% for message in messages %}
            {{ message }}
        {% endfor %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

    <form method="post" action="{{ path('abonne_new') }}" class="mt-4">
        <div class="mb-3">
            <label for="msisdn" class="form-label">Numéro de téléphone (MSISDN)</label>
            <input type="text" id="msisdn" name="msisdn" class="form-control" required maxlength="15">
        </div>

        <div class="mb-3">
            <label for="NomComplet" class="form-label">Nom Complet</label>
            <input type="text" id="NomComplet" name="NomComplet" class="form-control" required maxlength="100">
        </div>

        <div class="mb-3">
            <label for="Ville" class="form-label">Ville</label>
            <input type="text" id="Ville" name="Ville" class="form-control" required maxlength="50">
        </div>

        <div class="mb-3">
            <label for="specialite" class="form-label">Spécialité</label>
            <input type="text" id="specialite" name="specialite" class="form-control" required maxlength="100">
        </div>

        <button type="submit" class="btn btn-success">Enregistrer</button>
    </form>
{% endblock %}
